# Global optimizations for all hosts
Host *
  # Connection multiplexing (reuse existing connections)
  ControlMaster auto
  ControlPath ~/.ssh/sockets/%r@%h:%p
  ControlPersist 60m

  # Compression (helps over VPN)
  Compression yes

  # Keep connections alive through VPN
  ServerAliveInterval 60
  ServerAliveCountMax 3
  TCPKeepAlive yes

  # Faster ciphers (less CPU overhead)
  Ciphers chacha20-poly1305@openssh.com,aes128-gcm@openssh.com,aes256-gcm@openssh.com

  # Reuse DNS lookups
  AddressFamily inet

